<?xml version="1.0" encoding="UTF-8"?>
<launch>

    <node pkg="obstacle_detection" type="obstacle_detection_node" name="obstacle_detection_node" args="--logtostderr=0 --colorlogtostderr=1 --stderrthreshold=1   $(arg logdir)" output="screen">
      <param name="grid_resolution" value="0.2"/>
      <param name="heightdiff_threshold" value="0.3"/>
      <param name="heightdiff_threshold_higher" value="0.5"/>
      <param name="N_SCANS" value="32"/>
      <param name="display_on" value="true"/>
      <param name="resize_times" value="2.0"/>
      <param name="enable_unknown_area" value="true"/>
      <param name="outer_angle_start" value="-65"/>
      <param name="outer_angle_end" value="245"/>
      <param name="outer_unknown_radius" value="6.8"/>
      <param name="inner_angle_start" value="23"/>
      <param name="inner_angle_end" value="157"/>
      <param name="inner_unknown_radius" value="4.2"/>
      <rosparam param="body_x_range">[-1.6,1.6]</rosparam>
      <rosparam param="body_y_range">[-3,3]</rosparam>
      <rosparam param="body_z_range">[-3,3]</rosparam>
    </node>

</launch>